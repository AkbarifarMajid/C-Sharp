<UserControl x:Class="InvoiceApp.Views.LoginView"             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             Width="247">    <Grid Margin="20">        <StackPanel VerticalAlignment="Center">            <TextBlock Text=" Username" Margin="0,0,0,5"/>            <!--Connect to property Username in LoginViewModel-->            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>            <!--Connect PasswordBox to Code-behind-->            <TextBlock Text=" Password" Margin="0,0,0,5"/>            <PasswordBox Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged" Margin="0,0,0,10"/>            <!--Connect to Icommand LoginCommand in LoginViewModel-->            <Button Content="Enter" Command="{Binding LoginCommand}" Margin="0,20,0,0"/>        </StackPanel>    </Grid></UserControl>