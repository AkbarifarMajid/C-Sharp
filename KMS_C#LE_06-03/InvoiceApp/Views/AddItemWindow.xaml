<Window x:Class="InvoiceApp.Views.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:InvoiceApp.ViewModels"
        Title="Add New Item"
        Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.DataContext>
        <vm:AddItemViewModel />
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Name Item -->
        <StackPanel Orientation="Horizontal" Margin="0,10" Grid.Row="0">
            <TextBlock Text="Name Item:" Width="80" VerticalAlignment="Center"/>
            <TextBox Width="250" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!-- ID Item -->
        <StackPanel Orientation="Horizontal" Margin="0,10" Grid.Row="1">
            <TextBlock Text="Item Nr:" Width="80" VerticalAlignment="Center"/>
            <TextBox Width="250" Text="{Binding Id}" IsReadOnly="True"/>
        </StackPanel>

        <!--Price Item-->
        <StackPanel Orientation="Horizontal" Margin="0,10" Grid.Row="2">
            <TextBlock Text="Price(Euro):" Width="80" VerticalAlignment="Center"/>
            <TextBox Width="250" Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!-- Bottons -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,20,0,0" HorizontalAlignment="Right">
            <Button Content="Save" Width="100" Margin="5" Command="{Binding SaveCommand}"/>
            <Button Content="Cancel" Width="100" Margin="5" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
