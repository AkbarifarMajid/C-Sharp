<Window x:Class="InvoiceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:InvoiceApp.Views"
        xmlns:vm="clr-namespace:InvoiceApp.ViewModels"
        Title="InvoiceApp Login" Height="350" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <!--All content inside this window (including loginView) by default uses LoginViewmodel as Viewmodel.-->
    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>

    <Grid>
        <views:LoginView />
        
    </Grid>
</Window>
