<Window x:Class="GolddiggerGmbh.Views.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" Height="330" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- form -->
            <RowDefinition Height="Auto"/>
            <!-- buttons -->
        </Grid.RowDefinitions>

        <!-- Form grid -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- First Name -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="First Name:" Margin="0,0,10,6"/>
            <TextBox   x:Name="TxtFirstName" Grid.Row="0" Grid.Column="1"
                       Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       Margin="0,0,0,6"/>

            <!-- Last Name -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Last Name:" Margin="0,0,10,6"/>
            <TextBox   x:Name="TxtLastName" Grid.Row="1" Grid.Column="1"
                       Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       Margin="0,0,0,6"/>

            <!-- Street -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Street:" Margin="0,0,10,6"/>
            <TextBox   x:Name="TxtStreet" Grid.Row="2" Grid.Column="1"
                       Text="{Binding Street, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       Margin="0,0,0,6"/>

            <!-- No -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="No:" Margin="0,0,10,6"/>
            <TextBox   x:Name="TxtNo" Grid.Row="3" Grid.Column="1"
                       Text="{Binding No, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       Margin="0,0,0,6"/>

            <!-- Postal Code -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Postal Code:" Margin="0,0,10,6"/>
            <TextBox   x:Name="TxtPostalCode" Grid.Row="4" Grid.Column="1"
                       Text="{Binding PostalCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       Margin="0,0,0,6"/>

            <!-- City -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="City:" Margin="0,0,10,6"/>
            <TextBox   x:Name="TxtCity" Grid.Row="5" Grid.Column="1"
                       Text="{Binding City, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       Margin="0,0,0,6"/>

            <!-- Email -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Email:" Margin="0,0,10,6"/>
            <TextBox   x:Name="TxtEmail" Grid.Row="6" Grid.Column="1"
                       Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       Margin="0,0,0,6"/>

            <!-- Phone -->
            <TextBlock Grid.Row="7" Grid.Column="0" Text="Phone:" Margin="0,0,10,6"/>
            <TextBox   x:Name="TxtPhone" Grid.Row="7" Grid.Column="1"
                       Text="{Binding Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       Margin="0,0,0,6"/>

            <!-- Birth Date -->
            <TextBlock Grid.Row="8" Grid.Column="0" Text="Birth Date:" Margin="0,0,10,0"/>
            <DatePicker x:Name="DpBirthDate" Grid.Row="8" Grid.Column="1"
                        SelectedDate="{Binding BirthDate, Mode=TwoWay}"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK"     Width="90" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="90" IsCancel="True"  Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
